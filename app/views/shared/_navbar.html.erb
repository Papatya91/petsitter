      <% elsif sitter_signed_in? %>
        <li class="nav-item active">
          <%= link_to "My profile", myprofile_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Bookings", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_owner_session_path, class: "nav-link", class: "btn btn-ghost:hover", method: :delete %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sitter Login", new_sitter_session_path, class: "nav-link", class: "btn btn-flat" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
