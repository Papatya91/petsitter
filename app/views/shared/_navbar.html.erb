<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon" style="background-color: #053225;">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag ("paw.png") %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if owner_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Find a Sitter", new_job_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Bookings", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_owner_session_path, class: "nav-link", class: "btn btn-ghost", method: :delete %>
