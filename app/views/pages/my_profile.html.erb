<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
       <div class="form-card"  style="width: 600px";>
        <h1><%="#{@sitter_profile.name}'s profile" %></h1>
          <% if @sitter_profile.photo.attached? %>
            <%= cl_image_tag @sitter_profile.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <%= simple_form_for @sitter_profile do |f| %>
            <%= f.input :photo, as: :file %>
           <%# f.input :photo_cache, as: :hidden %>
            <%= f.button :submit, class: 'btn btn-flat' %>
          <% end %>
         </div>
         <div class="myprofile-card">
          <h2><%= "Name: #{@sitter_profile.name}" %></h2>
          <p><%= "Location: #{@sitter_profile.location}" %></p>
          <h2><%= "Average rating: #{@sitter_review.sum(:rate).to_f / @sitter_review.count}" %></h2>
          <% @sitter_review.each do |review| %>
            <p><%= review.comment %></p>
            <p><%= "by #{Owner.find(review.owner_id).name}" %></p>
          <% end %>
        <%= link_to "Check my bookings", dashboard_path, class: "btn-gradient" %></p>
      </div>
    </div>
  </div>
</div>

